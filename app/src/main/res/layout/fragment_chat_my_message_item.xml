<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/conversation_list_item_message_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        tools:text="12. DEC 2015 10:04 PM"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/conversation_list_item_user_photo"
            android:background="@drawable/balloon_mine"
            android:orientation="vertical">

            <TextView
                android:id="@+id/conversation_list_item_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="22dp"
                android:paddingTop="12dp"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                tools:text="Some message userName a a i i i i i "/>
        </LinearLayout>

        <ImageView
            android:id="@+id/conversation_list_item_user_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:src="@drawable/default_profile_picture"/>

    </RelativeLayout>

</LinearLayout>
